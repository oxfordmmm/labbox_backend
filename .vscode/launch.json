{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Uvicorn Directly",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--log-level",
                "trace",
                "--reload",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "Alembic",
            "type": "debugpy",
            "request": "launch",
            "module": "alembic.config",
            "cwd": "${workspaceFolder}",
            "args": [
                "upgrade",
                "head"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "src/app"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
    ]
}